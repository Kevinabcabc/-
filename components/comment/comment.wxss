/* components/comment/comment.wxss */
.comment{
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.comment .left{
  display: flex;
  justify-content: space-between;
   align-items: center;
}
.comment .left image{
  height: 70rpx;
  width: 70rpx;
  margin-right: 20rpx;
}

.comment .left .time{
  color: #999;
  line-height: 40rpx;
}

.comment .right image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}