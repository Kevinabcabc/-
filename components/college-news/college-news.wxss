/* components/college-news/college-news.wxss */
.college-news{
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.college-news .img{
  height: 200rpx;
  width: 300rpx;

}
.college-news .info{
  width: 400rpx;
}
.college-news .info .title{
  font-weight: bold;
  margin: 10rpx 0;
}

.college-news .info .content{
  height: 100rpx;
  overflow: hidden;
}

.college-news .info .time{
  color: #666;
}