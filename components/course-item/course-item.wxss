/* components/course-item/course-item.wxss */
.course-item{
  width: 100%;
  height: 140rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.course-item .left{
  width: 250rpx;
  height: 100%;
  position: relative;
}
.course-item .left .type{
  position: absolute;
  bottom: 0;
  padding: 5rpx 10rpx;
  background: rgba(111, 111, 111, 0.4);
  color: white;
}
.course-item .left image{
  height: 100%;
  width: 100%;
}
.course-item .right{
  position: relative;
  height: 100%;
  width: 450rpx;
}
.course-item .right .title{
  font-weight: bold;
  font-size: 30rpx;
  line-height: 50rpx;
}
.course-item .right .content{
  color: #666;
}
.course-item .right .time{
  line-height: 50rpx;
  color: #999;
}
.course-item .right .signUp{
  position: absolute;
  background: #d2ae8a;
  color: white;
  padding: 8rpx 40rpx;
  border-radius: 30rpx;
  right: 0;
  top: 35rpx;
}