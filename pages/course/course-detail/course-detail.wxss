/* pages/course/course-detail/course-detail.wxss */
.course-detail{
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.course-detail .meta{
  width: 100%;
  height: 400rpx;
}
.course-detail .course-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}

.course-detail .course-title .left{
  font-weight: bold;
  font-size: 35rpx;
}

.course-detail .summer{
  padding: 8rpx 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 28rpx;
}



.title-more{
  width: 100%;
  height: 80rpx;
  display: flex;
  padding: 0 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0;
}
.title-more .title{
  display: flex;
}
.title-more .title .long{
  height: 40rpx;
  width: 10rpx;
  background: rgb(205, 175, 143);
  margin-right: 15rpx;
}
.title-more .title  text{
  font-weight: bold;
}

.title-more .more text{
  color: rgb(205, 175, 143);
}

.course-detail .time{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
}


.course-detail .teachers{
  display: flex;
  justify-content: space-between;
}

.course-detail .bottomFix{
  position: fixed;
  bottom: 0;
  height: 120rpx;
  background: white;
  width: 750rpx;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.course-detail .bottomFix image{
  height: 60rpx;
  width: 60rpx;
  margin-left: 50rpx;
}
.course-detail .bottomFix view{
  height: 100%;
  width: 600rpx;
  background: rgb(205, 175, 143);
  color: white;
  text-align: center;
  line-height: 120rpx;
  font-size: 30rpx;
  letter-spacing: 10rpx;
}

.whiteSpace{
  height: 130rpx;
}