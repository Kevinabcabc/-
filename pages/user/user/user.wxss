/* pages/user/user/user.wxss */

.user{
  width: 100%;
  height: 100%;
}
.user .header{
  height: 200rpx;
  background: rgb(205, 175, 143);
}

.user .header .header-content{
  height: 150rpx;
  width: 100%;
  display: flex;
  align-items: center;
}
.user .header .header-content image{
  height: 90rpx;
  width: 90rpx;
  margin: 0 30rpx;
  border-radius: 50%;
}
.user .header .header-content .right{
  color:white;
}

.user .banner{
  height: 140rpx;
  width: 650rpx;
  border: 1rpx solid #ddd;
  border-radius: 70rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  margin: -70rpx 50rpx 20rpx 50rpx;
  background: white;
}

.title-more{
  width: 100%;
  height: 80rpx;
  display: flex;
  padding: 0 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
}
.title-more .title{
  display: flex;
}
.title-more .title .long{
  height: 40rpx;
  width: 10rpx;
  background: rgb(205, 175, 143);
  margin-right: 15rpx;
}
.title-more .title  text{
  font-weight: bold;
}